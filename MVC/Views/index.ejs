<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Google Calendar Mockup</title>
    <link rel="shortcut icon" href="img/calendar-icon.png">
    <link rel="stylesheet" href="css/index.css">
</head>
<body>
    <%- include('components/nav.ejs') %>
    <main class="calendar">
        <div class="calendar__header">
            <div class="calendar__header--day" id="GTC">GTC -5:00</div>
            <% currentWeek.forEach(current => { %>
                <% if (current.current) { %>
                <div class="calendar__header--day calendar__header--day-current" id="<%= current.day %>">
                    <span><%= current.header %></span>
                    <span class="day-of-month"><%= current.date %></span>
                </div>
                <% } else { %>
                <div class="calendar__header--day" id="<%= current.day %>">
                    <span><%= current.header %></span>
                    <span class="day-of-month"><%= current.date %></span>
                </div>
                <% } %>
            <% }); %>
        </div>
        <div class="calendar__time">
            <% for (let i = 0; i < 2; i++) { %>
                <% if (i === 0) { %>
                <% var meridian = 'am'; %>
                <% } else { %>
                <% var meridian = 'pm'; %>
                <% } %>
        
                <% for (let j = 0; j < 12; j++) { %>
                    <% if (j === 0) { %>
                    <% var hour = 12 + meridian; %>
                    <% } else { %>
                    <% var hour = j + meridian; %>
                    <% } %>
                    <div class="calendar__time--hour" id="<%= hour %>"><%= hour %></div>
                <% } %>
            <% } %>
        </div>
        <% currentWeek.forEach(current => { %>
            <div class="calendar__day" id="<%= current.day %>">
                <% for (let i = 0; i < 2; i++) { %>
                    <% if (i === 0) { %>
                    <% var meridian = 'am'; %>
                    <% } else { %>
                    <% var meridian = 'pm'; %>
                    <% } %>
            
                    <% for (let j = 0; j < 12; j++) { %>
                        <% if (j === 0) { %>
                        <% var hour = 12; %>
                        <% } else { %>
                        <% var hour = j; %>
                        <% } %>
                        <% const time = hour + meridian %>
                        <div class="calendar__event" id="<%= time %>"></div>
                    <% } %>
                <% } %>
            </div>
        <% }); %>
    </main>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="js/onload.js"></script>
    <script src="js/client-variables.js"></script>
    <script src="js/add-event.js"></script>
</body>
</html>