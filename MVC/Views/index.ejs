<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Google Calendar Mockup</title>
    <link rel="shortcut icon" type="image/png" href="/img/calendar-icon.png">
    <link rel="stylesheet" href="/css/index.css">
</head>
<body>
    <%- include('components/nav.ejs') %>
    <main class="calendar">
        <div class="calendar__header">
            <div class="calendar__header--day" id="GTC">GTC -5:00</div>
            <% currentWeek.forEach(current => { %>
                <% if (current.current) { %>
                <div class="calendar__header--day calendar__header--day-current" id="<%= current.day %>">
                    <span><%= current.header %></span>
                    <span class="day-of-month"><%= current.date %></span>
                </div>
                <% } else { %>
                <div class="calendar__header--day" id="<%= current.day %>">
                    <span><%= current.header %></span>
                    <span class="day-of-month"><%= current.date %></span>
                </div>
                <% } %>
            <% }); %>
        </div>
        <%- include('components/time-side.ejs') %>
        <%- include('components/events.ejs') %>
    </main>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="/js/onload.js"></script>
    <script src="/js/client-variables.js"></script>
    <script src="/js/add-event.js"></script>
</body>
</html>